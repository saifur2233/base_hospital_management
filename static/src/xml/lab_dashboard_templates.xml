<?xml version="1.0" encoding="utf-8"?>
<template>
    <t t-name="LabDashboard">
        <style>
            .lab_dash .nav-tabs .nav-link {
                font-weight: 600;
                padding: 0.75rem 1rem;
                }

                .lab_dash .nav-tabs .nav-link.active {
                border-bottom: 3px solid var(--o-brand-odoo);
                }

                .lab_dash .card-header h4 {
                font-weight: 700;
                }

                .lab_dash table tbody tr:hover {
                background: rgba(0, 0, 0, 0.03);
                }

                .stat-card {
                background: linear-gradient(135deg, #4ec8e3 0%, #2ba3c8 100%);
                color: white;
                padding: 25px;
                border-radius: 12px;
                margin-bottom: 20px;
                cursor: pointer;
                transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                position: relative;
                overflow: hidden;
                box-shadow: 0 5px 15px rgba(43, 163, 200, 0.2);
                animation: fadeInUp 0.6s ease backwards;
            }

            .stat-card:nth-child(1) { animation-delay: 0.1s; }
            .stat-card:nth-child(2) { animation-delay: 0.2s; }
            .stat-card:nth-child(3) { animation-delay: 0.3s; }
            .stat-card:nth-child(4) { animation-delay: 0.4s; }
            .stat-card:nth-child(5) { animation-delay: 0.5s; }

            .stat-card::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -50%;
                width: 100%;
                height: 100%;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                transition: all 0.6s ease;
            }

            .stat-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 15px 40px rgba(43, 163, 200, 0.3);
            }

            .stat-card:hover::before {
                top: -25%;
                right: -25%;
            }

            .stat-card-label {
                font-size: 13px;
                font-weight: 600;
                opacity: 0.95;
                text-transform: uppercase;
                letter-spacing: 0.5px;
            }

            .stat-card-value {
                font-size: 28px;
                font-weight: 700;
                margin-top: 10px;
                position: relative;
                z-index: 1;
            }

            .stat-card-icon {
                position: absolute;
                right: 20px;
                top: 20px;
                font-size: 32px;
                opacity: 0.3;
                transition: all 0.3s ease;
            }

            .stat-card:hover .stat-card-icon {
                transform: rotate(20deg) scale(1.1);
                opacity: 0.5;
            }

        </style>
        <div class="oh_dashboards lab_dash" t-ref="root">
            <div class="container-fluid o_pj_dashboard">
                <div class="row">
                    <div class="col-md-12 my-4">
                        <div class="row d-flex justify-content-center g-4">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="stat-card">
                                    <div class="stat-card-icon"><i class="fa fa-user-md"></i></div>
                                    <div class="stat-card-label">Tests to Confirm</div>
                                    <div class="stat-card-value">
                                        <t t-esc="state.summary.tests_to_confirm"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="stat-card">
                                    <div class="stat-card-icon"><i class="fa fa-user-md"></i></div>
                                    <div class="stat-card-label">Process Test</div>
                                    <div class="stat-card-value">
                                        <t t-esc="state.summary.process_test"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="stat-card">
                                    <div class="stat-card-icon"><i class="fa fa-user-md"></i></div>
                                    <div class="stat-card-label">Published</div>
                                    <div class="stat-card-value">
                                        <t t-esc="state.summary.published"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row p-5">
                    <div class="col-md-12 bg-white p-3 mb-3 rounded shadow-sm">
                        <!-- Tabs -->
                        <ul class="nav nav-tabs" id="labTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active"
                                        id="test-confirm-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#test-confirm-pane"
                                        type="button" role="tab"
                                        aria-controls="test-confirm-pane"
                                        aria-selected="true"
                                        t-on-click="_loadTestData">
                                    Tests to Confirm
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link"
                                        id="process-test-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#process-test-pane"
                                        type="button" role="tab"
                                        aria-controls="process-test-pane"
                                        aria-selected="false"
                                        t-on-click="_allLabTest">
                                    Process Test
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link"
                                        id="published-test-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#published-test-pane"
                                        type="button" role="tab"
                                        aria-controls="published-test-pane"
                                        aria-selected="false"
                                        t-on-click="_loadPublished">
                                    Published
                                </button>
                            </li>
                        </ul>

                        <!-- Tab Content -->
                        <div class="tab-content pt-3" id="labTabContent">

                            <!-- ============ TAB 1: TESTS TO CONFIRM ============ -->
                            <div class="tab-pane fade show active"
                                 id="test-confirm-pane"
                                 role="tabpanel"
                                 aria-labelledby="test-confirm-tab">

                                <div class="card border-0" style="width:100%;">
                                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">Tests to Confirm</h4>
                                            <small class="text-muted">Draft lab test lines waiting for confirmation</small>
                                        </div>

                                        <div class="btn-group" role="group" aria-label="Actions">
                                            <button type="button" class="btn btn-outline-success"
                                                    t-on-click="_exportConfirm">
                                                <i class="fa fa-cloud-download me-1"></i> Export
                                            </button>
                                            <button type="button" class="btn btn-outline-warning"
                                                    t-on-click="_printConfirm">
                                                <i class="fa fa-print me-1"></i> Print
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Sequence</th>
                                                        <th>Patient</th>
                                                        <th>Doctor</th>
                                                        <th>Type</th>
                                                        <th>Date</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="index" t-value="-1"/>
                                                    <t t-foreach="state.tests_confirm" t-as="test" t-key="test.id">
                                                        <t t-set="index" t-value="index + 1"/>
                                                        <tr class="tests-confirmed"
                                                            style="cursor:pointer;"
                                                            t-on-click="_fetchTestData"
                                                            t-att-data-index="index">
                                                            <td><t t-esc="test.display_name"/></td>
                                                            <td><t t-esc="test.patient_id[1]"/></td>
                                                            <td><t t-esc="test.doctor_id[1]"/></td>
                                                            <td><t t-esc="test.patient_type"/></td>
                                                            <td><t t-esc="test.date"/></td>
                                                        </tr>
                                                    </t>

                                                    <t t-if="!state.tests_confirm.length">
                                                        <tr>
                                                            <td colspan="5" class="text-center text-muted py-4">
                                                                No tests found in Draft state.
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>

                                        <!-- Details panel (same tab) -->
                                        <t t-if="state.tests_confirm_data and state.tests_confirm_data.name">
                                            <div class="mt-4 p-3 border rounded bg-light">
                                                <div class="d-flex align-items-center gap-3">
                                                    <div>
                                                        <h5 class="mb-0">
                                                            <t t-esc="state.tests_confirm_data.name"/>
                                                        </h5>
                                                        <small class="text-muted">Patient details &amp; test lines</small>
                                                    </div>
                                                    <t t-if="state.tests_confirm_data.image_1920">
                                                        <img t-att-src="'data:image/png;base64,' + state.tests_confirm_data.image_1920"
                                                             class="ms-auto rounded-circle border"
                                                             style="height:52px;width:52px;object-fit:cover;"/>
                                                    </t>
                                                </div>

                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <table class="table table-sm table-borderless mb-0">
                                                            <tr><td class="text-muted">Phone</td><td><t t-esc="state.tests_confirm_data.phone or ''"/></td></tr>
                                                            <tr><td class="text-muted">Email</td><td><t t-esc="state.tests_confirm_data.email or ''"/></td></tr>
                                                            <tr><td class="text-muted">DOB</td><td><t t-esc="state.tests_confirm_data.dob or ''"/></td></tr>
                                                            <tr><td class="text-muted">Gender</td><td><t t-esc="state.tests_confirm_data.gender or ''"/></td></tr>
                                                        </table>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <table class="table table-sm table-borderless mb-0">
                                                            <tr><td class="text-muted">Marital</td><td><t t-esc="state.tests_confirm_data.status or ''"/></td></tr>
                                                            <tr><td class="text-muted">Blood</td><td><t t-esc="state.tests_confirm_data.blood_group or ''"/></td></tr>
                                                            <tr><td class="text-muted">Doctor</td><td><t t-esc="state.tests_confirm_data.doctor or ''"/></td></tr>
                                                            <tr><td class="text-muted">Type</td><td><t t-esc="state.tests_confirm_data.patient_type or ''"/></td></tr>
                                                        </table>
                                                    </div>
                                                </div>

                                                <h6 class="mt-3 mb-2">Test Details</h6>
                                                <div class="table-responsive">
                                                    <table class="table table-bordered table-sm align-middle mb-2 bg-white">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th style="width:80px;">Sl</th>
                                                                <th>Name</th>
                                                                <th>Lead</th>
                                                                <th style="width:120px;">Price</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr t-foreach="state.test_data" t-as="testdata" t-key="testdata.id">
                                                                <td><t t-esc="testdata.id"/></td>
                                                                <td><t t-esc="testdata.name"/></td>
                                                                <td><t t-esc="testdata.patient_lead"/></td>
                                                                <td><t t-esc="testdata.price"/></td>
                                                            </tr>
                                                            <t t-if="!state.test_data.length">
                                                                <tr>
                                                                    <td colspan="4" class="text-center text-muted py-3">
                                                                        No test lines found.
                                                                    </td>
                                                                </tr>
                                                            </t>
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <div class="d-flex justify-content-end">
                                                    <button class="btn btn-primary"
                                                            t-on-click="confirmLabTest">
                                                        <i class="fa fa-check me-1"></i> Confirm
                                                    </button>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>

                            <!-- ============ TAB 2: PROCESS TEST ============ -->
                            <div class="tab-pane fade"
                                 id="process-test-pane"
                                 role="tabpanel"
                                 aria-labelledby="process-test-tab">

                                <div class="card border-0" style="width:100%;">
                                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">Process Test</h4>
                                            <small class="text-muted">All patient lab tests</small>
                                        </div>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-success btn-sm"
                                                    t-on-click="_exportProcess">
                                                <i class="fa fa-cloud-download me-1"></i> Export
                                            </button>
                                            <button type="button" class="btn btn-outline-warning btn-sm"
                                                    t-on-click="_printProcess">
                                                <i class="fa fa-print me-1"></i> Print
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Sequence</th>
                                                        <th>Patient</th>
                                                        <th>Date</th>
                                                        <th>Price</th>
                                                        <th>State</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-set="index" t-value="-1"/>
                                                    <t t-foreach="state.all_test_data" t-as="testdata" t-key="testdata.id">
                                                        <t t-set="index" t-value="index + 1"/>
                                                        <tr style="cursor:pointer;"
                                                            t-on-click="fetch_all_test_data"
                                                            t-att-data-index="testdata.id">
                                                            <td><t t-esc="testdata.display_name"/></td>
                                                            <td><t t-esc="testdata.patient_id[1]"/></td>
                                                            <td><t t-esc="testdata.date"/></td>
                                                            <td><t t-esc="testdata.total_price"/></td>
                                                            <td><t t-esc="testdata.state"/></td>
                                                        </tr>
                                                    </t>

                                                    <t t-if="!state.all_test_data.length">
                                                        <tr>
                                                            <td colspan="5" class="text-center text-muted py-4">
                                                                No lab tests found.
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ============ TAB 3: PUBLISHED ============ -->
                            <div class="tab-pane fade"
                                 id="published-test-pane"
                                 role="tabpanel"
                                 aria-labelledby="published-test-tab">

                                <div class="card border-0" style="width:100%;">
                                    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
                                        <div>
                                            <h4 class="mb-0">Published Test</h4>
                                            <small class="text-muted">Published results with attachments</small>
                                        </div>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-success btn-sm"
                                                    t-on-click="_exportPublished">
                                                <i class="fa fa-cloud-download me-1"></i> Export
                                            </button>
                                            <button type="button" class="btn btn-outline-warning btn-sm"
                                                    t-on-click="_printPublished">
                                                <i class="fa fa-print me-1"></i> Print
                                            </button>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-hover align-middle mb-0">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Sequence</th>
                                                        <th>Patient</th>
                                                        <th>Test</th>
                                                        <th>Normal</th>
                                                        <th>Result</th>
                                                        <th>Unit</th>
                                                        <th class="text-center">Attachment</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="state.published_data" t-as="published_data" t-key="published_data.id">
                                                        <tr>
                                                            <td><t t-esc="published_data.parent_id"/></td>
                                                            <td><t t-esc="published_data.patient_id[1]"/></td>
                                                            <td><t t-esc="published_data.test_id"/></td>
                                                            <td><t t-esc="published_data.normal or ''"/></td>
                                                            <td><t t-esc="published_data.result or ''"/></td>
                                                            <td><t t-esc="published_data.unit or ''"/></td>
                                                            <td class="text-center">
                                                                <t t-if="published_data.attachment_id">
                                                                    <a t-attf-href="/web/content/#{published_data.attachment_id}?download=true&amp;access_token="
                                                                       class="btn btn-outline-primary btn-sm">
                                                                        <i class="fa fa-download"></i>
                                                                    </a>
                                                                </t>
                                                            </td>
                                                        </tr>
                                                    </t>

                                                    <t t-if="!state.published_data.length">
                                                        <tr>
                                                            <td colspan="7" class="text-center text-muted py-4">
                                                                No published results found.
                                                            </td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div><!-- tab-content -->
                    </div>
                </div>
            </div>
        </div>
    </t>
</template>
